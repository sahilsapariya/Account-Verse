# Get list of staged files in docs/
docs_changed_files=$(git diff --cached --name-only | grep "^docs/" || true)

# Get list of staged files in server/
server_changed_files=$(git diff --cached --name-only | grep "^server/" || true)

# Check docs changes
if [ -n "$docs_changed_files" ]; then
  echo "ğŸ§¼ Running lint on docs/ project..."

  cd docs || exit 1

  npm run lint || exit 1

  echo "âœ… Docs lint passed."
  
  cd .. || exit 1
else
  echo "ğŸ“ No changes in docs/, skipping docs lint."
fi

# Check server changes
if [ -n "$server_changed_files" ]; then
  echo "ğŸ”§ Running lint and tests on server/ project..."

  cd server || exit 1

  make pre-commit || exit 1

  echo "âœ… Server lint and tests passed."
  
  cd .. || exit 1
else
  echo "ğŸ“ No changes in server/, skipping server lint."
fi

echo "ğŸ‰ All pre-commit checks passed!"
