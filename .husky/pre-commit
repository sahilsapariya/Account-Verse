# Get list of staged files in docs/
changed_files=$(git diff --cached --name-only | grep "^docs/")

if [ -n "$changed_files" ]; then
  echo "ğŸ§¼ Running lint on docs/ project..."

  cd docs || exit 1

  npm run lint || exit 1

  echo "âœ… Lint passed."
else
  echo "ğŸ“ No changes in docs/, skipping lint."
fi
